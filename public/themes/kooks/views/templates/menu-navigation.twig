<div class="main-menu lg:py-8">
  <div class="container">
    <div class="hidden justify-between items-center lg:flex">
      {% if menu_right %}
        <div class="w-1/3 flex items-center justify-center">
          {% for item in menu_right %}
            <a
              href="{{ item.url }}"
              class="text-accent-blue flex flex-col items-center mx-4 xl:mx-6 {{ item.class }}"
              target="{{ item.target }}"
              title="{{ item.title }}"
              aria-label="{{ item.title }}"
            >
              {% if item.meta('image') %}
                <img src="{{ item.meta('image').url }}"
                     alt="{{ item.meta('image').alt }}"
                     class="h-20"
                >
              {% else %}
                <span class="text-lg xl:text-2xl mb-1">{{ item.title }}</span>
                <span class="dot" style="background-color: {{ item.meta('dot_color') }}"></span>
              {% endif %}
            </a>
          {% endfor %}
        </div>
      {% endif %}
      <div class="w-1/3">
        <a
          href="{{ site.link }}"
          class=""
          target="_self"
          title="{{ site.name }}"
          aria-label="{{ site.name }}"
        >
          <img src="{{ options.logo.url }}" alt="{{ site.name }}">
        </a>
      </div>
      {% if menu_left %}
        <div class="w-1/3 flex items-center justify-center">
          {% for item in menu_left %}
            <a
              href="{{ item.url }}"
              class="text-accent-blue flex flex-col items-center mx-4 xl:mx-6 {{ item.class }}"
              target="{{ item.target }}"
              title="{{ item.title }}"
              aria-label="{{ item.title }}"
            >
              {% if item.meta('image') %}
                <img src="{{ item.meta('image').url }}"
                     alt="{{ item.meta('image').alt }}"
                     class="h-20"
                >
              {% else %}
                <span class="text-lg xl:text-2xl mb-1">{{ item.title }}</span>
                <span class="dot" style="background-color: {{ item.meta('dot_color') }}"></span>
              {% endif %}
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
  <div class="mobile-menu lg:hidden fixed top-0 flex items-center w-full z-50 bg-white">
    <div class="container">
      <div class="flex justify-between items-center w-full">
        <a
          href="{{ site.link }}"
          class="stamp"
          target="_self"
          title="{{ site.name }}"
          aria-label="{{ site.name }}"
        >
          <img src="{{ options.stamp.url }}" alt="{{ site.name }}">
        </a>
        <button data-target="modal-menu" class="uppercase tracking-wide text-accent-blue menu-toggle">MENU</button>
      </div>
    </div>
  </div>
</div>
<div id="modal-menu" class="modal-menu fixed z-50 w-full h-full inset-0 bg-white">
  <div class="overlay absolute inset-0 bg-orange-light"></div>
  <div class="container relative z-10">
    <div class="flex justify-between items-center w-full py-4 modal-header mb-6">
      <a
        href="{{ site.link }}"
        class="stamp"
        target="_self"
        title="{{ site.name }}"
        aria-label="{{ site.name }}"
      >
        <img src="{{ options.stamp.url }}" alt="{{ site.name }}">
      </a>
      <button class="uppercase tracking-wide text-accent-blue menu-toggle-close">FERMER</button>
    </div>
    <div class="modal-items">
      {% if menu_right %}
        <div class="flex flex-col">
          {% for item in menu_right %}
            <a
              href="{{ item.url }}"
              class="text-accent-blue flex items-center mb-6 {{ item.class }}"
              target="{{ item.target }}"
              title="{{ item.title }}"
              aria-label="{{ item.title }}"
            >
              <span class="text-lg xl:text-2xl">{{ item.title }}</span>
              <span class="dot ml-2" style="background-color: {{ item.meta('dot_color') }}"></span>
            </a>
          {% endfor %}
        </div>
      {% endif %}
      {% if menu_left %}
        <div class="flex flex-col">
          {% for item in menu_left %}
            <a
              href="{{ item.url }}"
              class="text-accent-blue flex items-center mb-6 {{ item.class }}"
              target="{{ item.target }}"
              title="{{ item.title }}"
              aria-label="{{ item.title }}"
            >
              <span class="text-lg xl:text-2xl">{{ item.title }}</span>
              <span class="dot ml-2" style="background-color: {{ item.meta('dot_color') }}"></span>
            </a>
          {% endfor %}
        </div>
      {% endif %}
      {% if options.socials %}
        <div class="separator w-full h-px bg-accent-blue mb-6"></div>
        <div class="socials flex flex-col">
          {% for social in options.socials %}
            <a
              href="{{ social.redirection.url }}"
              class="mb-4 text-accent-blue"
              target="{{ social.redirection.target }}"
              title="{{ social.redirection.title }}"
              aria-label="{{ social.redirection.title }}"
            >
              <span>{{ social.redirection.title }}</span>
            </a>
          {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</div>
