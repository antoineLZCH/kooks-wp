<div class="block-contact-link">
  <div class="container">
    <div class="flex flex-col {{ fields.position }}">
      <div class="flex flex-col">
        {% if fields.text %}
          <p class="text-dark-grey mb-6 text-center mb-4">{{ fields.text }}</p>
        {% endif %}
        <a
          href="{{ fields.redirection.url }}"
          title="{{ fields.redirection.title }}"
          aria-label="{{ fields.redirection.title }}"
          target="{{ fields.redirection.target }}"
          class="flex items-start relative"
        >
          <img src="{{ asset('assets/images/rdv-ici.svg') }}" alt="Rendez-vous ici !" class="absolute left-0"
               id="asset-left">
          <div class="button-primary bg-orange text-white" id="redirection">{{ fields.redirection.title }}</div>
          <img src="{{ asset('assets/images/ou-la.svg') }}" alt="C'est par lÃ  !" class="absolute right-0"
               id="asset-right">
        </a>
      </div>
    </div>
  </div>
</div>
