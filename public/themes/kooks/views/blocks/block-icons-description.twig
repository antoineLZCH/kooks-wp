<div class="block-icons-description" id="{{ fields.anchor }}">
  <div class="container">
    {% if fields.group %}
      <div class="flex flex-col lg:flex-row justify-between mb-8">
        {% for group in fields.group %}
          <div class="lg:w-1/{{ loop.length }} flex flex-col items-center text-center mb-8 lg:mb-0">
            <img src="{{ group.image.url }}"
                 alt="{{ group.image.alt }}"
                 class="w-8 h-8 mx-auto mb-6"
            >
            <div class="w-8/12 lg:w-1/2 mx-auto text-accent-blue">{{ group.description }}</div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
    {% if fields.text %}
      <div class="w-10/12 mx-auto text-orange text-center text-xl">
        {{ fields.text }}
      </div>
    {% endif %}
  </div>
</div>
