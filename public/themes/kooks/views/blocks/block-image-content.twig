{% set side = fields.is_side_reversed ? 'lg:flex-row-reverse flex-col-reverse' : 'lg:flex-row flex-col items-center lg:items-start' %}
{% set titles_side = fields.titles.is_title_reversed ? 'flex-col-reverse' : 'flex-col' %}

<div class="block-image-content" id="{{ fields.anchor }}">
  <div class="container">
    <div class="flex {{ side }} items-center">
      <div class="lg:w-1/2 w-full mb-8 lg:mb-0">
        <div class="flex {{ titles_side }} mb-6 text-orange text-center lg:text-left">
          <div class="text text-4xl lg:text-5xl xl:text-7xl leading-9">
            {{ fields.titles.title }}
          </div>
          {% if fields.titles.tagline %}
            <div class="tagline recipe-title">
              {{ fields.titles.tagline }}
            </div>
          {% endif %}
        </div>
        <div class="content flex flex-col lg:w-9/12 text-accent-blue">
          {% if fields.text_before_quote %}
            <div class="may-have-bold">{{ fields.text_before_quote }}</div>
          {% endif %}
          {% if fields.quote %}
            <div class="quote w-11/12 mx-auto my-6 text-3xl font-semibold text-orange">{{ fields.quote }}</div>
          {% endif %}
          {% if fields.text_after_quote %}
            <div class="may-have-bold">{{ fields.text_after_quote }}</div>
          {% endif %}
        </div>
      </div>
      <div class="lg:w-1/2 w-full mb-8 lg:mb-0">
        <img src="{{ fields.image.url }}"
             alt="{{ fields.image.alt }}"
             class="object-cover w-full"
        >
      </div>
    </div>
  </div>
</div>
