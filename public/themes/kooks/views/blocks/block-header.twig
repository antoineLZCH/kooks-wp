<div class="block-header h-screen flex overflow-hidden bg-center bg-cover relative"
     style="background-image: url({{ fields.image.url }})">
  <div class="overlay inset-0 absolute w-full h-full"></div>
  <div class="container relative z-10">
    <div class="h-full flex items-center">
      <div class="mx-auto xl:mr-auto xl:ml-0 xl:w-1/2 text-center">
        {% if fields.title %}
          <div class="flex flex-col mx-2 lg:mx-0 header-title">
            {{ fields.title }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
