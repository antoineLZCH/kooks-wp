{% set classTitle = fields.title_type == "h1" ? "recipe-title uppercase text-3xl lg:text-5xl" : "title-h2" %}

<div class="headline" id="{{ fields.anchor }}">
  <div class="container">
    <div class="flex">
      <div class="lg:w-8/12 mx-auto text-center">
        <div class="{{ classTitle }} text-orange mb-8 font-arial">{{ fields.title }}</div>
        {% if fields.content %}
          <div class="text-dark-grey">{{ fields.content }}</div>
        {% endif %}
      </div>
    </div>
  </div>
</div>
